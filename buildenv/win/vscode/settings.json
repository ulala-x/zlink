{
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.buildDirectory": "${workspaceFolder}/core/build/vscode-ninja",
    "cmake.generator": "Ninja",
    "cmake.configureSettings": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "ZLINK_BUILD_CPP_BINDINGS": "ON",
        "ZLINK_CPP_BUILD_TESTS": "ON",
        "ZLINK_BUILD_TESTS": "ON"
    },
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.default.compileCommands": "${workspaceFolder}/core/build/vscode-ninja/compile_commands.json",
    "C_Cpp.default.intelliSenseMode": "windows-msvc-x64",
    "C_Cpp.default.browse.path": [
        "${workspaceFolder}/core/include",
        "${workspaceFolder}/core/src",
        "${workspaceFolder}/core/tests",
        "${workspaceFolder}/core/unittests",
        "${workspaceFolder}/bindings/cpp/include",
        "${workspaceFolder}/bindings/cpp/tests",
        "${workspaceFolder}/bindings/node/native/src",
        "${workspaceFolder}/core/external/boost",
        "${workspaceFolder}/core/deps/vcpkg/installed/x64-windows-static/include"
    ],
    "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": false,
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-22",
            "path": "${env:JDK22_HOME}",
            "default": true
        }
    ],
    "java.jdt.ls.java.home": "${env:JDK22_HOME}",
    "java.import.gradle.java.home": "${env:JDK22_HOME}",
    "java.import.exclusions": [
        "**/bindings/java/src/main/resources/native/**"
    ],
    "python.defaultInterpreterPath": "python",
    "python.analysis.extraPaths": [
        "${workspaceFolder}/bindings/python/src"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "bindings/python/tests"
    ],
    "search.exclude": {
        "**/bindings/**/prebuilds/**": true,
        "**/bindings/**/runtimes/**": true,
        "**/bindings/python/src/zlink/native/**": true,
        "**/bindings/java/src/main/resources/native/**": true
    },
    "files.watcherExclude": {
        "**/bindings/**/prebuilds/**": true,
        "**/bindings/**/runtimes/**": true,
        "**/bindings/python/src/zlink/native/**": true,
        "**/bindings/java/src/main/resources/native/**": true
    },
    "files.associations": {
        "*.ipp": "cpp",
        "*.tpp": "cpp",
        "*.gyp": "jsonc"
    }
}
